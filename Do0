#include <iostream>

using namespace std;

int main() {
    char tabuleiro[6][7] = {
        {' ', ' ', ' ', ' ', ' ', ' ', ' '},
        {' ', ' ', ' ', ' ', ' ', ' ', ' '},
        {' ', ' ', ' ', ' ', ' ', ' ', ' '},
        {' ', ' ', ' ', ' ', ' ', ' ', ' '},
        {' ', ' ', ' ', ' ', ' ', ' ', ' '},
        {' ', ' ', ' ', ' ', ' ', ' ', ' '}};

    for (int i=0; i<6; i++) {
        cout << "+--+--+--+--+--+--+--+\n";
        for (int j=0; j<7; j++) {
            cout << "| " << tabuleiro[i][j];
        }
        cout << "|";
        cout << endl;
    }
    cout << "+--+--+--+--+--+--+--+\n";
}
